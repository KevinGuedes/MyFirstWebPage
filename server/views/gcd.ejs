    onblur="this.placeholder = 'Number greater or equal to 0'" placeholder="Number greater or equal to 0" pattern="^[\d.,]+$" required>
<% } else { %>
    <input id="second-number" class="input-number" type="number" name="secondNumber" min="0" step="1" onfocus="this.placeholder = ''"
    onblur="this.placeholder = 'Number greater or equal to 0'" placeholder="Number greater or equal to 0" pattern="^[\d.,]+$" required>
<% } %> 