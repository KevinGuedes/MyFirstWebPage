{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": [
        "google"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "linebreak-style": [
            "off"
        ],
        "semi": [
            "off"
        ],
        "indent": [
            2,
            4
        ],
        "padded-blocks": [
            "error",
            "always"
        ],
        "object-curly-spacing": [
            "off"
        ]
    }
}