<div class="menu">
    <h1 class="page-title"><%= pageHeader %></h1>
    <form class="<%= formClass %>" action="<%= action %>" method="POST">

        <label for="input-number">Insert a number</label>
        <% if(inputNumber){ %>
        <input id="input-number" class="input-number" type="number" name="inputNumber" value="<%= inputNumber%>" min="1"
            onfocus="this.placeholder = ''" onblur="this.placeholder = 'Number greater than 0'"
            placeholder="Number greater than 0">
        <% } else { %>
        <input id="input-number" class="input-number" type="number" name="inputNumber" min="1"
            onfocus="this.placeholder = ''" onblur="this.placeholder = 'Number greater than 0'"
            placeholder="Number greater than 0">
        <% } %>

        <button class="run" type="submit"><%= buttonText %></button>
        <%- include("./partials/result") %>

    </form>
    <%- include("./partials/back") %>
    <%- include("./partials/madeby") %>
</div>