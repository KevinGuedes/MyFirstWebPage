{
    "version": "0.2.0",
    "configurations": [
        // Start da aplicação com debug
        {
            "name": "[Start] Debug Node App",
            "program": "${workspaceFolder}/app.js",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node"
        },
        // Attach de debug na aplicação em execução 'npm run dev'
        {
            "name": "[Attach] Debug Node App",
            "request": "attach",
            "restart": true,
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node"
        }
    ],
}
